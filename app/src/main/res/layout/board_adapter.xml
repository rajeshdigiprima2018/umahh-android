<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/IV_mosque"
            android:lines="1"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/IV_mosque"
            android:text="Dr. Mohammad Yusuf"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/Tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_Name"
            android:layout_below="@+id/tv_Name"
            android:layout_marginTop="0dp"
            android:text="Imam of the Mosque"
            android:lines="2"
            android:textColor="@color/white"
            android:textSize="10sp"
            />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IV_mosque"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/mosque_2" />


    </RelativeLayout>


    <TextView
        android:id="@+id/Tv_TextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/Lorem"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="1dp"/>


</LinearLayout>