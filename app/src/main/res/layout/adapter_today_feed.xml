<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/recycler_bg"
    android:orientation="vertical">

    <!-- <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="4dp"
         android:elevation="4dp">
 -->
    <RelativeLayout
        android:id="@+id/Rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/Tv_Descrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/Lay_Today_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/Tv_Descrition"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:elevation="10dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/Iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/activity_image" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <!--<ImageView
            android:id="@+id/Iv_icon"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/Tv_Descrition"
            android:layout_marginTop="10dp"
            android:src="@drawable/umrah" />-->


        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:text="&#8942;"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Lay_Today_feed"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3">

            <ImageView
                android:id="@+id/Iv_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/dislike" />

            <TextView
                android:id="@+id/Tv_like_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="200"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/white" />


        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"

            android:text="2 hours"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:id="@+id/Lay_mosque"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/IV_mosque"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/mosque_5" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Tv_mosque_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:text="200"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Tv_mosque_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:text="200"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <!--    </android.support.v7.widget.CardView>-->

</LinearLayout>